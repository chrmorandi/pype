include partials/_top.php

doctype html
html(lang=Yii::$app->language)
  include partials/_head
  body
    -$view->beginBody()
    include partials/_header
    main.container
      .columns
        .one-fourth.column
          nav.menu.docs-menu
            !=Html::a('Home', Page::url('index'), ['class' => ($view->title == 'Pype') ? 'menu-item selected' : 'menu-item'])
            !=Html::a('Docs', Page::url('docs'), ['class' => ($view->title == 'Documentation') ? 'menu-item selected' : 'menu-item'])
            !=Html::a('Installation', Page::url('docs/install'), ['class' => ($view->title == 'Installation') ? 'menu-item selected' : 'menu-item'])
            !=Html::a('How it works', Page::url('docs/how-it-works'), ['class' => ($view->title == 'How it works') ? 'menu-item selected' : 'menu-item'])
            !=Html::a('Syntax', Page::url('docs/syntax'), ['class' => ($view->title == 'Syntax') ? 'menu-item selected' : 'menu-item'])
            !=Html::a('Theming', Page::url('docs/theming'), ['class' => ($view->title == 'Theming') ? 'menu-item selected' : 'menu-item'])
          nav.menu.docs-menu
            !=Html::a('Pype on Github', 'https://github.com/jacmoe/pype', ['class' => 'menu-item'])
        .three-fourths.column
          !=$content
      .columns
        hr
        include partials/_footer
    !=Html::jsFile(YII_DEBUG ? '@web/themes/primer/js/all.js' : '@web/themes/primer/js/all.min.js?v=' . filemtime(Yii::getAlias('@webroot/themes/primer/js/all.min.js')))
    -$view->endBody()
  -$view->endPage()
